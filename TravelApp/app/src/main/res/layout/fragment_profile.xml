<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:weightSum="100"
    android:gravity="center">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/city" />

        <ImageView
            android:id="@+id/profile_image_view"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"

            android:scaleType="centerCrop"
            android:src="@drawable/person_icon" />

    </FrameLayout>

    <Button
        android:id="@+id/btnMyposting"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="116dp"
        android:layout_marginStart="115dp"
        android:backgroundTint="@color/my_primary"
        android:text="내 기록"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnMyschedule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />

    <Button
        android:id="@+id/btnMyschedule"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="116dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="18dp"
        android:backgroundTint="@color/my_primary"
        android:text="내 일정"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnBookmark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMyposting" />

    <Button
        android:id="@+id/btnBookmark"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="116dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="9dp"
        android:backgroundTint="@color/my_primary"
        android:text="관심 등록 글"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnAIHistory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMyschedule" />

    <Button
        android:id="@+id/btnAIHistory"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="102dp"
        android:layout_marginEnd="116dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/my_primary"
        android:text="AI 추천 기록"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBookmark" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="166dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="80dp"
        android:text="이름"
        android:textSize="35dp"
        android:textColor="#172FD5"
        app:layout_constraintBottom_toTopOf="@+id/btnMyposting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>